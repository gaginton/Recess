{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "plugins": [
        "babel",
        "react"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "ecmaFeatures": {
            "jsx": true
        },
        "requireConfigFile": false,
        "babelOptions": {
            "plugins": [
                "@babel/plugin-proposal-class-properties"
            ],
            "presets": [
                "@babel/preset-react"
            ]
        }
    },
    "rules": {
        "react/prop-types": "off",
        "react/no-unescaped-entities": "off",
        "indent": [
            "warn",
            4
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-magic-numbers": "off",
        "max-lines": [
            "warn",
            500
        ],
        "max-params": [
            "warn",
            5
        ],
        "max-statements": [
            "warn",
            100
        ],
        "max-lines-per-function": [
            "warn",
            100
        ],
        "brace-style": [
            "warn",
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "block-spacing": [
            "warn",
            "always"
        ],
        "func-call-spacing": [
            "warn",
            "never"
        ],
        "keyword-spacing": "warn",
        "comma-spacing": "warn",
        "arrow-spacing": "warn",
        "arrow-parens": "warn",
        "no-confusing-arrow": "warn",
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "eol-last": [
            "warn",
            "always"
        ],
        "no-useless-constructor": "warn",
        "no-use-before-define": [
            "warn",
            "nofunc"
        ],
        "prefer-const": "warn",
        "no-var": "warn"
    }
}
